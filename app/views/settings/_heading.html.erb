<div class="top-0 left-0 right-0 z-20 border-b">
  <div class="flex items-center justify-between w-full h-16 p-3 bg-white xl:px-6 xl:py-3">
    <div class="flex">
      <h2 class="text-2xl font-medium leading-none text-gray-900 xl:text-2xl">
        <%= t('.settings') %>
      </h2>
      <svg class="w-6 h-6 ml-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
    </div>
    <div>
      <div class="sm:hidden">
        <select aria-label="Selected tab" class="block w-full form-select">
          <option><%= t('.account') %></option>
          <option><%= t('.company') %></option>
          <option><%= t('.team_members') %></option>
          <option ><%= t('.billing') %></option>
        </select>
      </div>
      <div class="hidden sm:block">
        <nav class="flex text-gray-500">
          <button button :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'account' }"
            @click="tab = 'account'"
            class="px-3 py-2 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
            <%= t('.account') %>
          </button>
          <button button :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'company' }"
            @click="tab = 'company'"
            class="px-3 py-2 ml-4 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
            <%= t('.company') %>
          </button>
          <button button :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'team_members' }"
            @click="tab = 'team_members'"
            class="px-3 py-2 ml-4 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
            <%= t('.team_members') %>
          </button>
          <button button :class="{ 'text-indigo-700 bg-indigo-100 font-semibold': tab === 'billing' }"
            @click="tab = 'billing'"
            class="px-3 py-2 ml-4 text-sm font-medium leading-5 rounded-md hover:text-indigo-700 focus:outline-none focus:text-gray-700 focus:bg-gray-100">
            <%= t('.billing') %>
          </button>
        </nav>
      </div>
    </div>
  </div>
</div>
