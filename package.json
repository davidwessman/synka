{
  "name": "synka",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4",
    "@tailwindcss/typography": "^0.5",
    "alpinejs": "^3.8.1",
    "autoprefixer": "^10.4.2",
    "core-js": "^3",
    "esbuild": "^0.14.11",
    "esbuild-rails": "^1.0.3",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^3.0.15"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "pretty": "./node_modules/.bin/prettier --write .",
    "build:css": "tailwindcss --postcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds"
  },
  "lint-staged": {
    "*.rb": "bundle exec rubocop -A --force-exclusion",
    "*.{js,css,md,rb,json,yml}": "./node_modules/.bin/prettier --write",
    "Gemfile": "./node_modules/.bin/prettier --write"
  }
}
